<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid d-flex justify-content-between">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("nomadarte_logo.png") %>
    <% end %>
    <div class="input-group">
      <%= form_tag(items_path, method: :get, class: "d-flex mx-auto") do %>
        <div class="search-field">
          <%= button_tag(type: "submit", class: "btn", id: "search-btn" ) do %>
            Search
          <% end %>
          <%= text_field_tag(:query, nil, class: "btn", id: "search-input", placeholder: "Rent your art") %>
        </div>
      <% end %>
    </div>
    <%# Div hieromheen voor rechter items, justify-content-between %>
    <button class="navbar-toggler" type: "button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="d-flex">
            <%= link_to "Browse catalog", items_path, id: "navbar-btn-sec" %>
          </li>
          <li class="d-flex">
            <%= link_to "Upload new item", new_item_path, id: "navbar-btn-prim" %>
          </li>
          <li class="dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "pdiakjeemou4s9c1386jl5janddl-Circle.webp", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Settings", "/dasboard/settings", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", new_user_session_path, class: "btn", id: "navbar-btn-sec" %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path, class: "btn", id: "navbar-btn-prim" %>
          </li>
        <% end %>
      </ul>
    </div>
    <%# Einde div %>
  </div>
</div>
