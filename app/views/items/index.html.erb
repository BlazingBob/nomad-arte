
<div class="container align-items-stretch pt-4">
  <div class="row">
    <div class="col-12 pt">
      <div class="header bg-light d-flex align-items-center justify-content-center">
      <div class="text-end"><h1>Your Rent-Art Haven</h1></div>
      </div >
        <% if @query.present? %>
          <% if @items.any? %>
            <h2 class="text-start mt-4 mb-5"> Search results for "<%= @query %>"</h2>
          <% else %>
            <h2 class="text-start mt-4 mb-4">Sorry, nothing found</h2>
          <% end %>
        <% end %>   
      <br>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="item-card" class="">
              <div class="card-img" style="background-image: url('<%= cl_image_path item.image.key %>');"></div>
              <%= link_to item_path(item), class: "text-decoration-none" do %>
              <div class="text-decoration-underline d-flex justify-content-between">
                <div class="text-start"><%= item.name %></div>
                  <div class="text-end">
                    <span style="font-weight: bold; font-size: 1.1em;"><%= item.price_per_day %>$</span>
                  </div>
                </div>
              <div><p>Category: <%= item.category_name%>
                <br>Dimensions: 105 x 55 cm (hxb)
                <br>Availability: check here <%=  %></p>
                </div>
                <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
